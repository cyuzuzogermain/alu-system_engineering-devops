#!/usr/bin/bash

# Script Name: 0-transfer_file
# Description: Transfers a file from a client to a server using scp.

# Check if exactly 4 parameters are provided
if [ "$#" -lt 4 ]; then
    echo "Usage: 0-transfer_file PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
    exit 1
fi

# Assign parameters to variables for readability
PATH_TO_FILE=$1
IP=$2
USERNAME=$3
PATH_TO_SSH_KEY=$4

# Transfer the file to the user's home directory on the remote server
scp -i "$PATH_TO_SSH_KEY" -o StrictHostKeyChecking=no "$PATH_TO_FILE" "${USERNAME}@${IP}:~/"

# Check if transfer was successful
if [ $? -eq 0 ]; then
    echo "File successfully transferred to ${USERNAME}@${IP}:~/"
else
    echo "Error: File transfer failed."
    exit 1
fi
