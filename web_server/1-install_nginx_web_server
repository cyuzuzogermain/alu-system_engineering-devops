#!/bin/bash
# Script Name: 1-install_nginx_web_server
# Description: Installs and configures Nginx to serve a page containing "Holberton School"

# Exit on any error
set -e

# Update package list
sudo apt-get update -y

# Install nginx
sudo apt-get install -y nginx

# Make sure nginx is listening on port 80 (default)
# Create a simple HTML page with "Holberton School" text
echo "Holberton School" | sudo tee /var/www/html/index.nginx-debian.html > /dev/null

# Restart nginx using service (not systemctl)
sudo service nginx restart
